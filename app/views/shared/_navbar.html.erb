<div class="navbar">

	<div class="left-navbar">
		<%= link_to root_path do  %>
			<div class="logo">
				<%= image_tag("way-book-edited", size: "100x25") %>
			</div>
		<% end %>

		<form action="/search_employee" class="search-form">
		  <input type="text" name="name" placeholder="Search employee" class="input-text">
		  <div class="submit-btn-wrapper">
		  	<button type="submit" value="Submit" class="search-btn">
				<i class="fa fa-search" aria-hidden="true"></i>
		  	</button>
		  </div>
		</form>

		<form action="/search_skills" class="search-form">
		  <input type="text" name="skills" placeholder="Search skill" class="input-text">
		  <div class="submit-btn-wrapper">
		  	<button type="submit" value="Submit" class="search-btn">
				<i class="fa fa-search" aria-hidden="true"></i>
		  	</button>
		  </div>
		</form>
		
	</div>


	<div class="right-navbar">
		
		<div class="app-btns">
			
			<%= link_to search_employee_path, class: "employees-btn app-btn" do %>
				<i class="fa fa-address-book-o" aria-hidden="true"></i>
				<div class="text">
					Employees
				</div>
			<% end %>
			
			<%= link_to profiles_path, class: "skills-btn app-btn" do %>
				<i class="fa fa-list" aria-hidden="true"></i>
				<div class="text">
					Skills
				</div>
			<% end %>
			
		</div>
			
		<div class="other-apps">
			<i class="fa fa-th" aria-hidden="true"></i>
		</div>
		
		<img class="avatar" id="" src="" alt="">
	</div>
	  
</div>




