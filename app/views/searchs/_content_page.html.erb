<div class="search-employee-page">
	<div class="divisions-wrapper">
		<%= link_to search_by_division_path(division: "WAY People+ GmbH") do  %>
			<div class="division">WAY People+ GmbH</div>
		<% end %>
		<div class="team">Team A</div>
		<div class="team">Team B</div>
		<div class="team">Team C</div>
		<div class="division">WAY HR Professionals & Experts GmbH</div>
		<div class="team">Team D</div>
		<div class="team">Team E</div>
		<%= link_to search_by_division_path(division: "WAY IT Solutions GmbH") do  %>
			<div class="division">WAY IT Solutions GmbH</div>
		<% end %>
		<%= link_to search_by_team_path(team: "Michael Dreisbach") do  %>
			<div class="team">Michael Dreisbach</div>
		<% end %>
		<div class="team">Team G</div>
		<%= link_to search_by_division_path(division: "WAY Engineering GmbH") do  %>
			<div class="division">WAY Engineering GmbH</div>
		<% end %>
		<%= link_to search_by_team_path(team: "Brigitte Schulz") do  %>
			<div class="team">Brigitte Schulz</div>
		<% end %>
		<%= link_to search_by_team_path(team: "Christian Sailer") do  %>
			<div class="team">Christian Sailer</div>
		<% end %>
	</div>
	<div class="results-employees-wrapper">
		<div class="results-title">
			<i class="fa fa-users" aria-hidden="true"></i>
			Employees
		</div>
		<div class="results-list">
			<% @profiles.each do |profile| %>
				<div class="contact-info margins-search_employee">
					<div class="avatar"></div>
					<div class="info-blocks">
						<div class="block-50 paddings-search_employee">
							<div class="">
								<%= link_to profile_path(profile) do  %>
									<%= "#{profile.first_name} #{profile.last_name}" %>
								<% end %>
							</div>
							<div class="info position">
								<%= profile.position %>
							</div>
						</div>
						<div class="block-50 paddings-search_employee">
							<div class="info">
								<i class="fa fa-envelope-o" aria-hidden="true"></i>
								<%= profile.user.email %>
								</div>
							<div class="info">
								<i class="fa fa-phone" aria-hidden="true"></i>
								<%= profile.phone_number %>
							</div>
						</div>
					</div>

				</div>
			<% end %>
		</div>
	</div>
</div>




