<% own_company_skills = @profile.own_company_skills %>
<% own_company_skills_names = own_company_skills.map { |skill| skill.name } %>	
		
<% if own_company_skills_names.include? company_skill.name %>
	<% is_included = true %>
<% else %>
	<% is_included = false %>
<% end %>

<% if is_included %>

	<%= link_to profile_own_company_skill_path(@profile, id: company_skill), method: :delete, remote: true, class: "link-included" do  %>
		<div class="skill skill-show is-included %>">
			<div class="name">
				<%= company_skill.name %>
			</div>
			<i class="fa fa-check-circle-o icon" aria-hidden="true"></i>
		</div>
	<% end %>
	
<% else %>
	
	<%= link_to profile_own_company_skills_path(@profile, company_skill_id: company_skill), method: :post, remote: true, class: "link-not-included" do  %>
		<div class="skill skill-show not-included">
			<div class="name">
				<%= company_skill.name %>
			</div>
			<i class="fa fa-check-circle-o icon" aria-hidden="true"></i>
		</div>
	<% end %>
	
<% end %>



